<Window x:Class="LAB17WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB17WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <local:ColorPicker x:Name="colorPicker" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="70" ColorChanged="colorPicker_ColorChanged"/>
            <TextBlock x:Name="txb" Text="Цвет текста" Margin="10" Padding="10" FontSize="40" HorizontalAlignment="Center" FontWeight="ExtraBold"/>
        </StackPanel>

    </Grid>
</Window>
